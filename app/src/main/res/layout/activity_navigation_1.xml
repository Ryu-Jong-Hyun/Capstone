<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navi1_background"
    android:orientation="vertical"
    tools:context="com.example.jun.mycapstone.MapViewActivity_1"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textView4"
            android:src="@drawable/st"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="0.96"
            android:gravity="center" />

        <EditText
            android:id="@+id/Start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:hint="출발지를 입력하세요." />



        <Button
            android:id="@+id/startSearch"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/mylocation" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/textView3"
            android:src="@drawable/en"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="0.96"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="도착지를 입력하세요."
            android:layout_weight="3"
            android:textSize="15dp"
            android:id="@+id/End_text" />

        <Button
            android:id="@+id/Target_Button"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/mylocation"
            android:visibility="invisible" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tmap_layout"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_weight="0.78">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_FindRoute"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="0.88"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="#00ff0000"
            android:src="@drawable/findroute"/>

        <ImageButton
            android:id="@+id/button_StartNavi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:background="#00ff0000"
            android:src="@drawable/startnavi"/>

    </LinearLayout>
</LinearLayout>
