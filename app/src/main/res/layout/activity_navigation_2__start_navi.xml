<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.jun.mycapstone.CameraSurfaceView
        android:id="@+id/cameraSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.example.jun.mycapstone.DrawSurfaceView
        android:id="@+id/drawSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/tmap_layout3"
        android:layout_width="181dp"
        android:layout_height="175dp"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/outline"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tmap_layout2"
        android:layout_width="161dp"
        android:layout_height="155dp"
        android:layout_margin="10dp"
        android:visibility="visible">
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/minimap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/minisee" />

        <ImageButton
            android:id="@+id/stop_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:src="@drawable/navistop"/>

        <TextView
            android:id="@+id/turnTypeDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_margin="5dp"
            android:background="#FFD4EFFA"
            />

        <TextView
            android:id="@+id/endDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_margin="5dp"
            android:background="#FFD4EFFA"
            />
    </LinearLayout>

</FrameLayout>
